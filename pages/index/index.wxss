/**index.wxss**/
@import '/weui.wxss';

.word-wrapper {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding-left: 40rpx;
  animation: fadeIn 2s linear;
}
.word-small {
  font-size: 30rpx;
}
.word-day {
  font-size: 60rpx;
  margin-right: 10rpx;
}
.weather{
  position:absolute;
  bottom:100rpx;
  width:100%;
  text-align:center;
  font-family:'Helvetica Neue',Helvetica,Arial,'Microsoft Yahei','Hiragino Sans GB','Heiti SC','WenQuanYi Micro Hei',sans-serif;
  color: #fff;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}