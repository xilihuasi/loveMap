text{
	font-family:'Microsoft Yahei';
}
.container {
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	padding: 200rpx 0;
	box-sizing: border-box;
} 
.card {
	padding: 20rpx;
	border-radius: 2px;
	/*width: calc(100% - 20px);*/
	font-size: 30rpx;
	width: 70%;
	background: #fff;
	box-shadow: 0 2px 2px 0 rgba(0,0,0,.14), 0 3px 1px -2px rgba(0,0,0,.2), 0 1px 5px 0 rgba(0,0,0,.12);
}
